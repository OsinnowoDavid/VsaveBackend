{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": ".",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true, // enables most strict checks
        "strictNullChecks": false, // keeps null/undefined type checks off
        "noImplicitAny": true, // requires explicit types (for safety)
        "useUnknownInCatchVariables": false,
        "typeRoots": ["./types", "./node_modules/@types"]
    },
    "include": ["server", "types"],
    "exclude": ["node_modules", "dist"]
}
