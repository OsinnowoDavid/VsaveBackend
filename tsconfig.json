{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./server",
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strict": true, // disables all strict rules at once
        "strictNullChecks": false, // disables null/undefined type checks
        "noImplicitAny": true, // allows variables without explicit types
        "useUnknownInCatchVariables": false
    }
}
