{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "outDir": "./dist",
        "rootDir": "./server",

        "esModuleInterop": true,
        "skipLibCheck": true,

        "strict": true,
        "strictNullChecks": false,
        "noImplicitAny": true,
        "useUnknownInCatchVariables": false,

        "typeRoots": ["./types", "./node_modules/@types"]
    },

    "include": ["server", "types"],
    "exclude": ["node_modules", "dist"]
}
